@using MaksimApp.Core.Models;

@model Services
<div class="container">
    <div class="row">
        <div class="col-12">
            <form asp-action="DeleteService" method="post" class="card" style="width: 18rem;">
                <img src="~/Upload/Service/@Model.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.Description</p>
                    <input asp-for="@Model.Id" value="@Model.Id" />
                    <a asp-action="index" asp-controller="service" class="btn btn-warning">Go back</a>
                    <button type="submit" class="btn btn-danger">Delete</button>

                </div>
            </form>
        </div>
    </div>
</div>