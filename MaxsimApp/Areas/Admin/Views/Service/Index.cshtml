@using MaksimApp.Core.Models;
@model List<Services>
@{
    int count = 0;
}
<div class="container">
    <h1>

        Services
        <a class="btn btn-primary" asp-action="Create" asp-controller="Service">Create</a>

    </h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.Title</td>

                    <td>@item.Description</td>
                    <td>
                        <div style="width:100px">
                            <img width="100%" src="~/Upload/Service/@item.ImageUrl"></img>
                        </div>
                    </td>




                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Service" asp-route-id=@item.Id>Delete</a>
                        <a class="btn btn-info" asp-action="Update" asp-controller="Service" asp-route-id=@item.Id>Update</a>
                    </td>

                </tr>
            }



        </tbody>
    </table>
</div>